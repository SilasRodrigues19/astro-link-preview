{
  "name": "astro-link-preview",
  "version": "0.3.0",
  "description": "This Astro integration generates preview images for external links.",
  "private": false,
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.mjs",
    "./route": "./dist/route.mjs"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:debug": "tsup --config tsup.debug.ts",
    "build": "tsup --config tsup.config.ts",
    "install-playwright-deps": "playwright install chromium",
    "postinstall": "npx playwright install chromium",
    "prepublish": "npm run build"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "astro-component",
    "preview",
    "link",
    "integration"
  ],
  "author": "nemurubaka",
  "license": "MIT",
  "homepage": "https://github.com/cijiugechu/astro-link-preview",
  "repository": {
    "type": "git",
    "url": "git@github.com:cijiugechu/astro-link-preview.git"
  },
  "bugs": "https://github.com/cijiugechu/astro-link-preview/issues",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "astro": "^2.4.4",
    "tsup": "^6.7.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.8"
  },
  "dependencies": {
    "@napi-rs/image": "^1.6.1",
    "@node-rs/xxhash": "^1.4.0",
    "@rollup/pluginutils": "^5.0.2",
    "kleur": "^4.1.4",
    "parse5-html-rewriting-stream": "^7.0.0",
    "playwright": "^1.35.1"
  },
  "peerDependencies": {
    "astro": ">=2.0.0"
  }
}
